{
  "namespace": "battle",
  "button_stack": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [
      "default",
      "100%c"
    ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$button|default": "default_form.button",
    "factory": {
      "name": "buttons",
      "control_name": "$button"
    },
    "collection_name": "form_buttons",
    "bindings": [
      {
        "binding_name": "#form_button_length",
        "binding_name_override": "#collection_length"
      }
    ]
  },
  "button_hover_control": {
    "type": "image",
    "texture": "$new_ui_button_texture",
    "$hover_text_index|default": 0,
    "controls": [
      {
        "hover_text": {
          "type": "custom",
          "renderer": "hover_text_renderer",
          "allow_clipping": false,
          "layer": 30,
          "bindings": [
            {
              "binding_name": "#form_button_text",
              "binding_name_override": "#form_button_text",
              "binding_type": "collection",
              "binding_collection_name": "form_buttons"
            },
            {
              "binding_name": "#null",
              "binding_type": "view",
              "source_property_name": "(#form_button_text - (('%.' + $hover_text_index + 's') * #form_button_text))",
              "target_property_name": "#hover_text"
            },
            {
              "binding_name": "#null",
              "binding_type": "collection_details",
              "binding_collection_name": "form_buttons"
            }
          ]
        }
      }
    ]
  },
  "pp_bar": {
    "type": "image",
    "texture": "textures/ui/battle/white_shaded",
    "color": [
      0.1,
      0.6,
      1
    ],
    "layer": 10,
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "fill": true,
    "size": [
      "40%",
      "29%"
    ],
    "offset": [
      "30.3%",
      "19%"
    ],
    "$bar|default": "",
    "bindings": [
      {
        "binding_name": "#form_button_texture",
        "binding_name_override": "#form_button_texture",
        "binding_type": "collection",
        "binding_collection_name": "form_buttons"
      },
      {
        "binding_name": "#null",
        "binding_type": "view",
        "source_property_name": "((#form_button_texture - (%.2s * #form_button_texture)) = $bar)",
        "target_property_name": "#visible"
      }
    ]
  },
  "variable_progress_bar": {
    "type": "image",
    "texture": "textures/ui/filled_progress_bar",
    "layer": 2,
    "clip_pixelperfect": false,
    "clip_direction": "left",
    "$color_id|default": "G",
    "bindings": [
      {
        "binding_name": "#form_button_text",
        "binding_name_override": "#form_button_text",
        "binding_type": "collection",
        "binding_collection_name": "form_buttons"
      },
      {
        "binding_name": "#null",
        "binding_type": "view",
        "source_property_name": "( %.3s * (#form_button_text - (%.60s * #form_button_text)) * 1 )",
        "target_property_name": "#clip_ratio"
      },
      {
        "binding_name": "#null",
        "binding_type": "view",
        "source_property_name": "(%.1s * (#form_button_text - (%.58s * #form_button_text)) = $color_id)",
        "target_property_name": "#visible"
      }
    ]
  },
  "dynamic_progress_bar": {
    "type": "panel",
    "controls": [
      {
        "empty_progress_bar@common.empty_progress_bar": {
          "layer": 1
        }
      },
      {
        "green@variable_progress_bar": {
          "$color_id": "G",
          "color": [
            0.5,
            1,
            0.5,
            1
          ]
        }
      },
      {
        "yellow@variable_progress_bar": {
          "$color_id": "Y",
          "color": [
            1,
            0.9,
            0,
            1
          ]
        }
      },
      {
        "red@variable_progress_bar": {
          "$color_id": "R",
          "color": [
            1,
            0,
            0,
            1
          ]
        }
      }
    ]
  },
