{
	"format_version": "1.18.3",
	"minecraft:client_entity": {
		"description": {
			"identifier": "pokemon:golurk",
			"materials": {
				"default": "entity_emissive_alpha",
				"aura": "charged_creeper"
			},
			"textures": {
				"evo_aura": "textures/entity/evolving",
				"default": "textures/entity/pokemon/golurk/golurk.png",
				"shiny_default": "textures/entity/pokemon/golurk/shiny_golurk.png",
				"halloween": "textures/entity/pokemon/golurk/golurk_halloween.png",
				"shiny_halloween": "textures/entity/pokemon/golurk/shiny_golurk_halloween.png",
				"fullmetal": "textures/entity/pokemon/golurk/golurk_fullmetal.png",
				"shiny_fullmetal": "textures/entity/pokemon/golurk/shiny_golurk_fullmetal.png"
			},
			"scripts": {
				"scale": "q.property('pokeb:scale')",
				"initialize": [
					"v.blink_chance = 0.01;",
					"v.move_threshold = 0.01;"
				],
				"pre_animation": [
					"v.skin_index = query.property('pokeb:skin_index');",
					"v.is_ground_idling = query.is_on_ground && query.modified_move_speed < v.move_threshold;",
					"v.is_air_idling = !query.is_on_ground && !query.is_in_water && !query.is_jumping && query.modified_move_speed < v.move_threshold;",
					"v.is_water_idling = query.is_in_water && query.modified_move_speed < v.move_threshold;",
					"v.is_walking = query.modified_move_speed >= v.move_threshold && query.is_on_ground && !query.is_in_water;",
					"v.is_swimming = query.is_swimming;",
					"v.is_flying = query.modified_move_speed >= v.move_threshold && q.can_fly && !query.is_on_ground && !query.is_in_water && !query.is_jumping;",
					"v.is_sleeping = q.is_sleeping;",
					"v.should_blink = math.random(0.0, 1.0) <= v.blink_chance;"
				],
				"animate": [
					"controller",
					{
						"blink": "v.should_blink"
					}
				]
			},
			"animations": {
				"default_blink": "animation.golurk.blink",
				"default_ground_idle": "animation.golurk.ground_idle",
				"default_air_idle": "animation.golurk.ground_idle",
				"default_water_idle": "animation.golurk.water_idle",
				"default_walking": "animation.golurk.walking",
				"default_flying": "animation.golurk.ground_idle",
				"default_swimming": "animation.golurk.swimming",
				"default_sleeping": "animation.golurk.sleeping",
				"default_attack": "animation.golurk.attack",
				"halloween_flying": "animation.golurk_halloween.flying",
				"halloween_air_idle": "animation.golurk_halloween.air_idle",
				"halloween_swimming": "animation.golurk_halloween.swimming",
				"halloween_water_idle": "animation.golurk_halloween.water_idle",
				"halloween_walking": "animation.golurk_halloween.walking",
				"halloween_ground_idle": "animation.golurk_halloween.ground_idle",
				"halloween_sleeping": "animation.golurk_halloween.sleeping",
				"halloween_blink": "animation.golurk_halloween.blink",
				"halloween_attack": "animation.golurk_halloween.attack",
				"halloween_faint": "animation.golurk_halloween.faint",
				"fullmetal_flying": "animation.golurk_fullmetal.flying",
				"fullmetal_air_idle": "animation.golurk_fullmetal.air_idle",
				"fullmetal_swimming": "animation.golurk_fullmetal.swimming",
				"fullmetal_water_idle": "animation.golurk_fullmetal.water_idle",
				"fullmetal_walking": "animation.golurk_fullmetal.walking",
				"fullmetal_ground_idle": "animation.golurk_fullmetal.ground_idle",
				"fullmetal_sleeping": "animation.golurk_fullmetal.sleeping",
				"fullmetal_blink": "animation.golurk_fullmetal.blink",
				"fullmetal_attack": "animation.golurk_fullmetal.attack",
				"fullmetal_faint": "animation.golurk_fullmetal.faint",
				"look_at_target": "animation.pokemon.look_at_target",
				"attack": "controller.animation.pokemon.golurk_attack",
				"blink": "controller.animation.pokemon.golurk_blink",
				"controller": "controller.animation.pokemon.golurk"
			},
			"render_controllers": [
				{
					"controller.render.pokemon:golurk": "query.variant==0"
				},
				{
					"controller.render.pokemon:golurk.evolve": "query.variant==1"
				}
			],
			"spawn_egg": {
				"texture": "golurk",
				"texture_index": 0
			},
			"geometry": {
				"default": "geometry.golurk",
				"halloween": "geometry.golurk_halloween",
				"fullmetal": "geometry.golurk_fullmetal"
			}
		}
	}
}
