{
	"format_version": "1.18.3",
	"minecraft:client_entity": {
		"description": {
			"identifier": "pokemon:ditto",
			"materials": {
				"default": "entity_emissive_alpha",
				"aura": "charged_creeper"
			},
			"textures": {
				"evo_aura": "textures/entity/evolving",
				"default": "textures/entity/pokemon/ditto/ditto.png",
				"shiny_default": "textures/entity/pokemon/ditto/shiny_ditto.png",
				"slimeking": "textures/entity/pokemon/ditto/ditto_slimeking.png",
				"shiny_slimeking": "textures/entity/pokemon/ditto/shiny_ditto_slimeking.png",
				"venom": "textures/entity/pokemon/ditto/ditto_venom.png",
				"shiny_venom": "textures/entity/pokemon/ditto/shiny_ditto_venom.png"
			},
			"scripts": {
				"scale": "q.property('pokeb:scale')",
				"initialize": [
					"v.blink_chance = 0.01;",
					"v.move_threshold = 0.01;"
				],
				"pre_animation": [
					"v.skin_index = query.property('pokeb:skin_index');",
					"v.is_ground_idling = query.is_on_ground && query.modified_move_speed < v.move_threshold;",
					"v.is_air_idling = !query.is_on_ground && !query.is_in_water && !query.is_jumping && query.modified_move_speed < v.move_threshold;",
					"v.is_water_idling = query.is_in_water && !query.is_swimming;",
					"v.is_walking = query.modified_move_speed >= v.move_threshold && query.is_on_ground && !query.is_in_water;",
					"v.is_swimming = query.is_swimming;",
					"v.is_flying = query.modified_move_speed >= v.move_threshold && q.can_fly && !query.is_on_ground && !query.is_in_water && !query.is_jumping;",
					"v.is_sleeping = q.is_sleeping;",
					"v.should_blink = math.random(0.0, 1.0) <= v.blink_chance;"
				],
				"animate": [
					"controller",
					{
						"blink": "v.should_blink"
					}
				]
			},
			"animations": {
				"default_blink": "animation.ditto.blink",
				"default_ground_idle": "animation.ditto.ground_idle",
				"default_air_idle": "animation.ditto.ground_idle",
				"default_water_idle": "animation.ditto.water_idle",
				"default_walking": "animation.ditto.walking",
				"default_flying": "animation.ditto.ground_idle",
				"default_swimming": "animation.ditto.swimming",
				"default_sleeping": "animation.ditto.sleeping",
				"default_attack": "animation.ditto.attack",
				"slimeking_flying": "animation.ditto_slimeking.flying",
				"slimeking_air_idle": "animation.ditto_slimeking.air_idle",
				"slimeking_swimming": "animation.ditto_slimeking.swimming",
				"slimeking_water_idle": "animation.ditto_slimeking.water_idle",
				"slimeking_walking": "animation.ditto_slimeking.walking",
				"slimeking_ground_idle": "animation.ditto_slimeking.ground_idle",
				"slimeking_sleeping": "animation.ditto_slimeking.sleeping",
				"slimeking_blink": "animation.ditto_slimeking.blink",
				"slimeking_attack": "animation.ditto_slimeking.attack",
				"slimeking_faint": "animation.ditto_slimeking.faint",
				"venom_flying": "animation.ditto_venom.flying",
				"venom_air_idle": "animation.ditto_venom.air_idle",
				"venom_swimming": "animation.ditto_venom.swimming",
				"venom_water_idle": "animation.ditto_venom.water_idle",
				"venom_walking": "animation.ditto_venom.walking",
				"venom_ground_idle": "animation.ditto_venom.ground_idle",
				"venom_sleeping": "animation.ditto_venom.sleeping",
				"venom_blink": "animation.ditto_venom.blink",
				"venom_attack": "animation.ditto_venom.attack",
				"venom_faint": "animation.ditto_venom.faint",
				"look_at_target": "animation.pokemon.look_at_target",
				"attack": "controller.animation.pokemon.ditto_attack",
				"blink": "controller.animation.pokemon.ditto_blink",
				"controller": "controller.animation.pokemon.ditto"
			},
			"render_controllers": [
				{
					"controller.render.pokemon:ditto": "query.variant==0"
				},
				{
					"controller.render.pokemon:ditto.evolve": "query.variant==1"
				}
			],
			"spawn_egg": {
				"texture": "ditto",
				"texture_index": 0
			},
			"geometry": {
				"default": "geometry.ditto",
				"slimeking": "geometry.ditto_slimeking",
				"venom": "geometry.ditto_venom"
			}
		}
	}
}
